.slider-wrap {
  margin-top: 90px;
  width: 100%;
  display: flex;
  position: relative;
  @include tablets(){
    flex-flow: column;
  }
  @include phones() {
    margin-top: 0;
  }
    &:after {
    content: attr(data-slide);
    position: absolute;
    top: 50%;
    transform: translateY(-76%);
    line-height: 1;
    left: 66%;
    font-size: 400px;
    font-weight: 800;
    color: $text-color;
    opacity: 0.3;
    
    @include desktop() {
      top: 0;
      transform: translateY(-14%);
      margin-left: -2%;
      z-index: -1;
    }
    @include tablets(){
      margin-left: 11%;
    }
  }
}
.slider {
  display: flex;
  position: relative;
  @include tablets() {
    flex-flow: column;
    margin-bottom:2.5rem;
    width: 84%;
  }
  @include phones() {
    width: 100%;
    height: auto;
    margin-bottom: 60px;
    &:before {
      display: none;
    }
  }
} 
.slider__preview {
  width: 977px;
  height: 553px;
  @include tablets(){
    width: 61rem;
    height: 25.5rem;
  }  
 @include phones() {
  object-fit: contain;
  }
}
.slider__list {
  position: absolute;
  right: 0;
  bottom: 0;
  display: flex;
  flex-flow: column;
 @include tablets() {
   bottom: 0;
 }
  @include phones() {
    display: none;
  }
}
.slider__item {
  cursor: pointer;
  width: 178px;
  height: 100px;
  transition: filter 0.3s;

  &:hover {
    filter: saturate(300%);
    transition: filter 0.3s;
  }
    @include desktop() {
    width: 144.6px;
    height: 81px;
  }
  @include tablets(){
    width: 177px;
    height: 91px;
  }
}
.slider__list-item-pic {
  width: 100%;
  object-fit: cover;
}
.slider__list-item--active {
  border: 2px solid #f29400;
}
.slider__switch-wrap {
  position: absolute;
  right: 0;
  bottom: -3.1rem;
  display: flex;
  @include tablets() {
    bottom: -11.3%;
  }
  
  @include phones() {
    z-index: 2;
    top: 21.3%;
  }
}
.slider__switch {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  width: 50px;
  height: 50px;
  background-color: #414c63 !important;
  transition: background-color 0.2s;

  &:hover {
    border: $violet;
    transition: border 0.2s;
  }
  &:focus {
    border: 1px solid $violet;
  }
}
.slider__switch:hover .slider__arrow-svg {
  fill: $violet;
  transition: fill 0.2s;
}
.slider__switch:hover .slider__arrow-svg--denied {
  fill: $text-color;
  transition: fill 0.2s;
}
.slider__arrow-svg {
  width: 10px;
  fill: #fff;
  transition: fill 0.2s;
}
.slider__arrow-svg-prev {
  transform: rotate(-90deg)
}
.slider__arrow-svg-next {
  transform: rotate(90deg)
}

.slider-desc__wrap {
  position: relative;
  width: 34%;
  display: flex;
   @include desktop() {
     justify-content: center;
   }
    @include tablets() {
      width: 100%;
  }
}

.slider-desc__list {
  display: flex;
  margin-left: 95%;
  @include desktop(){
  margin-left: 21%;
  }
  @include tablets() {
    justify-content: center;
    margin-left: 0;
  }
}
.slider-desc__item {
  background-color: #f2f5f9;
  margin-left: 15px;
  padding: 12px;
  font-size: 15px;
  font-weight: 400;
  color: #2b3948;
  border-radius: 25px;

  &:first-child {
    margin-left: 0;
  }
}
.slider-desc {
  padding-left: 3.2rem;
  @include tablets(){
    padding-left: 0;
    width: 75%;
    padding-top: 2rem;
  }
  @include phones() {
    padding: 65px 50px;
  }
}
.slider-desc__content {
  height: 295px;
  margin-top: 55px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  @include desktop(){
    position: absolute;
    top: 1rem;
    left: 9rem;
    }
  @include tablets(){
    height: 10rem;
    padding-top: 2rem;
    align-items: center;
    left: 6rem;
    width: 77%;
  }
}
.slider-desc__title {
  color: #414c63;
  font-size: 30px;
  font-weight: 700;
}
.slider-desc__info {
  color: #2b3948;
  font-size: 16px;
  font-weight: 400;
  @include tablets(){
    width: 72%;
    text-align: center;
  }
}
.slider-desc__link {
  font-size: 18px;
  font-weight: 700;
  padding-left: 35px;
  position: relative;
  color: #4b6fd7;
  text-decoration: none;
  @include tablets(){
    padding-top: 2rem;
  }
  &:hover {
    color: #414c63;
  }
}
.slider-desc__link:hover .slider-desc__link__svg {
  fill: #414c63;
}
.slider-desc__link__svg {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 15px;
  height: 15px;
  fill: #4b6fd7;
  @include tablets() {
    left: 6%;
    top:75%;
  }
}