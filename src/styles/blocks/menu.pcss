.menu {
  display: flex;
}
.menu__item {
  font-size: 16px;
  padding-right: 9%;
  
  &:last-child {
    padding-right: 0; 
  }
    @include tablets() {
    padding-right: 2%;
  
  &:last-child {
    padding-right: 0; 
  }
  }
}
.menu__link {
  text-decoration: none;
  white-space: nowrap;
}
.menu.menu--footer {
  height: auto;
  color: white;
  padding-top: 10px;
  margin-right: 440px;
}
.menu__link:hover {
  color: white;
  border-bottom: 2px solid #ffffff;
}