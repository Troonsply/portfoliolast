.menu {
  display: flex;
  justify-content: space-between;
}
.menu.menu--footer {
  height: auto;
  color: white;
  padding-top: 10px;
  margin-right: 440px;
  @include tablets() {
    margin-right:0;
    flex-flow: row wrap;
    justify-content: flex-start;
  }
  @include phones() {
  flex-flow:column wrap;
  }
}
.menu__item {
  font-size: 16px;
  padding-right: 9%;
  
  &:last-child {
    padding-right: 0; 
  }
    @include tablets() {
    padding-right: 10%;
    padding-bottom: 2%;
  
  &:last-child {
    padding-right: 0; 
  }
  }
}
.menu__link {
  text-decoration: none;
  white-space: nowrap;

}
.menu__link:hover {
  color: white;
  border-bottom: 2px solid #ffffff;
}