mixin socials(mod)
    ul(class='socials socials--' + mod)
        - var socials = [{name: 'Instagram', link: 'https://instagram.com'}, {name: 'Vkontakte', link: 'https://vk.com'}, {name: 'Github',link: 'https://github.com/Troonsply'}];
        each item in socials
            li.socials__item
                a(href=item.href).socials__link
                    +icon(`${item.name}`,'socials__icon')